doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title 註冊
    style.
      h2 { text-align: center; }
      div { width: 400px; margin: 10px auto; }
      label{ width: 100%; display: inline-block; }
      input, textarea{ width: 100%; display: inline-block; }
      #send{ margin: 40px auto 0 auto; display: block; width: 50px; }
  body
    h2 註冊
    form#comment(method="POST")
      div
        label(for="name") 姓名:
        input(type="text" Name="Name" id="name")
      div
        label(for="email") 信箱:
        input(type="text" name="Email" id="email")
      div
        label(for="MobilePhone") 手機:
        input(type="text" name="MobilePhone" id="mobilephone")
      div
        label(for="Password") 密碼:
        input(type="text" name="Password" id="password")   
      div
        label(for="Address") 地址:
        textarea(name="Address" id="address" cols="20" rows="10")
      input#send(type="submit" value="送出")